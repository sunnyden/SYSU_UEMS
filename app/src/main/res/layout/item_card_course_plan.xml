<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="@dimen/text_margin">

        <TextView
            android:id="@+id/course_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ET1095"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/course_id"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="@string/passed"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/course_name_chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_id"
            android:layout_marginTop="1dp"
            android:text="这是一个测试名字"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/course_name_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_name_chinese"
            android:text="This is a name for test"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/plan_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_name_english"
            android:text="5 Credits, 90 Schooling Time" />

        <ImageView
            android:id="@+id/ic_image_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/plan_desc"
            android:layout_below="@id/plan_desc"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:tint="@color/default_text_color" />

        <TextView
            android:id="@+id/course_semaster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ic_image_start"
            android:layout_alignTop="@id/ic_image_start"
            android:layout_toEndOf="@id/ic_image_start"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:text="2016 Fall Semaster" />

    </RelativeLayout>

</android.support.v7.widget.CardView>